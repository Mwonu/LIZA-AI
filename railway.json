{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepService": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "SESSION_ID": {
      "description": "Enter your LIZA-AI Session ID here",
      "required": true
    },
    "OWNER_NUMBER": {
      "description": "Your WhatsApp number (e.g., 918075379950)",
      "default": "918075379950"
    },
    "MODE": {
      "description": "Bot mode: public or private",
      "default": "public"
    },
    "PREFIX": {
      "description": "Bot command prefix",
      "default": "."
    },
    "PREFIX_MODE": {
      "description": "Prefix mode: hybrid, prefix, or no-prefix",
      "default": "hybrid"
    }
  }
}
