{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "variables": {
      "SESSION_ID": {
        "description": "നിങ്ങളുടെ സെഷൻ ഐഡി ഇവിടെ നൽകുക",
        "required": true
      },
      "OWNER_NUMBER": {
        "description": "നിങ്ങളുടെ ഫോൺ നമ്പർ (eg: 918075379950)",
        "defaultValue": "918075379950"
      },
      "MODE": {
        "description": "Bot mode (public/private)",
        "defaultValue": "public"
      },
      "PREFIX": {
        "description": "Command Prefix (eg: .)",
        "defaultValue": "."
      },
      "PREFIX_MODE": {
        "description": "Prefix Mode (hybrid/prefix/no-prefix)",
        "defaultValue": "hybrid"
      }
    }
  }
}
